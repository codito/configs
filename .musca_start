# Musca Config
# Initial import: Sat 07 Aug 2010 06:39:42 PM IST
# Initial source: http://aerosuidae.net/musca/User:Batz/musca_start
# Last Modified: Tue 10 Aug 2010 10:21:14 AM IST

# Turn off managing
manage off tint2
bind off all

# Customize
set border_focus Red
set border_unfocus Dim Gray
set border_dedicate_focus Blue
set border_dedicate_unfocus Dark Blue
set border_catchall_focus Green
set border_catchall_unfocus Dark Green
set border_width 1
set frame_min_wh 100
set frame_resize 20
set window_open_frame current
set window_open_focus 1
set window_size_hints 1
set frame_display_hidden 1
set frame_split_focus current
set group_close_empty 0
set dmenu dmenu -i -nb '#000000' -nf '#777777' -sb '#770000' -sf '#ffffff' -fn '-*-dina-medium-r-normal-*-12-*-*-*-*-*-*-*' -p '> '
set notify notify-send -t 3000 Musca "`cat`"

#hook on ^add pad 0 0 0 20

# Setup initial workspaces
use 0
#pad 0 0 0 20
name main
exec urxvt

add www

add misc
exec urxvt

add mail
exec urxvt -title Mutt -e mutt
#exec urxvt -title IM -e irssi

# Do the www last as these are slow to load, and musca doesn't have a exec here yet
use www
exec firefox

# Groups
silent bind on Mod4+1                 use main
silent bind on Mod4+2                 use www
silent bind on Mod4+3                 use misc
silent bind on Mod4+4                 use mail

silent bind on Mod4+Shift+1           move main
silent bind on Mod4+Shift+2           move www
silent bind on Mod4+Shift+3           move misc
silent bind on Mod4+Shift+4           move mail

silent bind on Mod4+g                 switch group
silent bind on Mod4+period            use (next)
silent bind on Mod4+comma             use (prev)
silent bind on Mod4+apostrophe        use (other)

# Frames
silent bind on Mod4+s                 hsplit 1/2
silent bind on Mod4+Shift+s           vsplit 1/2
silent bind on Mod4+r                 remove
silent bind on Mod4+o                 only
silent bind on Mod4+u                 undo

silent bind on Mod4+d                 dedicate flip
silent bind on Mod4+a                 catchall flip

silent bind on Mod4+h                 focus left
silent bind on Mod4+j                 focus down
silent bind on Mod4+k                 focus up
silent bind on Mod4+l                 focus right
silent bind on Mod4+Left              focus left
silent bind on Mod4+Down              focus down
silent bind on Mod4+Up                focus up
silent bind on Mod4+Right             focus right

silent bind on Mod4+Shift+h           swap left
silent bind on Mod4+Shift+j           swap down
silent bind on Mod4+Shift+k           swap up
silent bind on Mod4+Shift+l           swap right
silent bind on Mod4+Shift+Left        swap left
silent bind on Mod4+Shift+Down        swap down
silent bind on Mod4+Shift+Up          swap up
silent bind on Mod4+Shift+Right       swap right

silent bind on Mod4+Control+h         resize left
silent bind on Mod4+Control+j         resize down
silent bind on Mod4+Control+k         resize up
silent bind on Mod4+Control+l         resize right
silent bind on Mod4+Control+Left      resize left
silent bind on Mod4+Control+Down      resize down
silent bind on Mod4+Control+Up        resize up
silent bind on Mod4+Control+Right     resize right

silent bind on Mod1+Tab               cycle local next
silent bind on Mod4+Tab               cycle local next
silent bind on Mod1+Shift+Tab         cycle local prev
silent bind on Mod4+Shift+Tab         cycle local prev
silent bind on Mod4+w                 switch window
silent bind on Mod4+space             stack flip

# Musca
silent bind on Mod4+Shift+1           shell
silent bind on Mod4+k                 kill
silent bind on Mod4+Shift+semicolon   command

# Programs
## Multimedia Keys
silent bind on Shift+XF86AudioRaiseVolume exec ~/bin/voltun -c up -i 3% -m Master
silent bind on Shift+XF86AudioMute        exec ~/bin/voltun -c mute -i 3% -m Master
silent bind on Shift+XF86AudioLowerVolume exec ~/bin/voltun -c down -i 3% -m Master
silent bind on XF86AudioRaiseVolume   exec ~/bin/voltun -c up -i 3% -m PCM
silent bind on XF86AudioMute          exec ~/bin/voltun -c mute -m PCM
silent bind on XF86AudioLowerVolume   exec ~/bin/voltun -c down -m PCM

silent bind on Shift+XF86AudioNext         exec mpc seek +00:00:05 >/dev/null
silent bind on Shift+XF86AudioPrev         exec mpc seek -00:00:05 >/dev/null
silent bind on XF86AudioNext           exec mpc next >/dev/null && notify-send "$(mpc --format '[[%artist% - ]%title%]|[%file%] #| %time%' | head -n1)" -i notification-audio-next -t 1000
silent bind on XF86AudioPrev           exec mpc prev >/dev/null && notify-send "$(mpc --format '[[%artist% - ]%title%]|[%file%] #| %time%' | head -n1)" -i notification-audio-previous -t 1000
silent bind on XF86AudioStop           exec mpc stop >/dev/null && notify-send "$(mpc --format '[[%artist% - ]%title%]|[%file%] #| %time%' | head -n1)" -t 1000
silent bind on Shift+XF86AudioStop         exec notify-send "$(mpc --format '[[%artist% - ]%title%]|[%file%] #| %time%' | head -n1)" -i notification-audio-play -t 1000
silent bind on XF86AudioPlay           exec mpc toggle >/dev/null && notify-send "$(mpc --format '[[%artist% - ]%title%]|[%file%] #| %time%' | head -n1)" -i notification-audio-play -t 1000

## General applications, keys begin with CapsLock
#silent bind on Mod3+c                 exec urxvt
silent bind on Mod4+Shift+f           exec google-chrome
silent bind on Mod4+Shift+t           exec urxvt
silent bind on Mod4+Shift+v           exec gvim

silent bind on Mod4+Control+Shift+l   exec xlock
silent bind on Mod4+Scroll_Lock       exec xlock
silent bind on Mod4+Shift+End         exec sleep 1 && xset dpms force off
silent bind on Print                  exec import -window root ~/pics/other/screen/screen-`date +%Y%m%d%H%M%S`.png
